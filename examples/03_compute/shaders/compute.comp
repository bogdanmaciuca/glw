#version 460

layout(binding = 0, rgba8) uniform writeonly image2D img_output;

layout(local_size_x = 10, local_size_y = 10) in;

void main() {
    ivec2 pixel_coords = ivec2(gl_GlobalInvocationID.xy);

    vec4 color = vec4(0.0, float(pixel_coords.x) / 400.0, float(pixel_coords.y) / 300.0, 1.0);
    imageStore(img_output, pixel_coords, color);
}

